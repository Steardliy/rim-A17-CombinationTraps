	    <li Class="CombinationTraps.CompProperties_Signal">
	    	<compClass>CombinationTraps.CompSignalTrap</compClass>
	    	<defaultTransmissionStance>ShutOut</defaultTransmissionStance>
	    	<transmissionStanceFilter>
	    		<li>OnlyReceive</li>
	    		<li>Both</li>
	    	</transmissionStanceFilter>
	    </li>
	</comps>
